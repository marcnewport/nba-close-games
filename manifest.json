{
  "name": "NBA Close Games",
  "description": "Highlight which games were within 3 points.",
  "version": "1.0.0",
  "browser_action": {
    "icons": ["icons/icon.png"],
    "default_icon": "icons/icon.png"
  },
  "background": {
    "scripts": ["js/jquery.min.js", "js/background.js", "js/manipulate.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["http://watch.nba.com/"],
    "css": ["css/manipulate.css"]
  }],
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
